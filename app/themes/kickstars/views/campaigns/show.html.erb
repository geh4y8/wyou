<div class="layout-2cols">
        <div class="content grid_8">
            <div class="project-detail">
                <h2 class="rs project-title"><%= @campaign.patient_name %></h2>
                <!-- <p class="rs post-by">by <a href="#">Jonh Doe</a></p> -->
                <div class="project-short big-thumb">
                    <div class="top-project-info">
                        <div class="content-info-short clearfix">
                            <div class="thumb-img">
                                <div class="rslides_container">
                                  <ul class="rslides" id="slider1">
                                    <div class="home-discover-friends">
                                        <div class="container_12">
                                            <div class="row-friends" style="margin-left:50px">
                                                <% count = 0 %>
                                                <% i = 0 %>
                                                <% until i > 3 do %>
                                                    <% if @supporter_results[i] %>
                                                    <a class="thumb-avatar"><%= image_tag attachment_url(@supporter_results[i].user, :image, :fill, 300, 300, fallback: "kickstars/your_face_here.jpg") %></a>
                                                    <% else %>
                                                    <a class="thumb-avatar" href="#"><%= image_tag 'kickstars/your_face_here.jpg' %></a>
                                                    <%end%>
                                                    <% count+=1 %>
                                                    <% i+=1 %>
                                                <% end %>
                                                <div class="clear"></div>
                                            </div>
                                            <div class="row-friends row-connect-fb" style="margin-left:50px">
                                                <div class="connect-fb">
                                                    <p class="rs description" style="padding-bottom:20px;margin-left:15%">we are w/you</p>
                                                    <!-- <div style="margin-left: 15%; padding: 10px">
                                                        <%= link_to new_campaign_donation_path(@campaign), :class=>"btn btn-green", :style=>'padding:10px'   do %>
                                                            <h3>I</h3> <div style="height:20px;width:20px"><%= image_tag 'kickstars/heart301.png', size:'20' %>
                                                            </div> <h3><%= @campaign.patient_name %></h3>
                                                        <% end %>
                                                    </div> -->
                                                </div>
                                                <div class="clear"></div>
                                            </div>
                                            <div class="row-friends" style="margin-left:50px">
                                                <% count = 0 %>
                                                <% i = 4 %>
                                                <% until i > 7 do %>
                                                    <% if @supporter_results[i] %>
                                                    <a class="thumb-avatar"><%= image_tag attachment_url(@supporter_results[i].user, :image, :fill, 300, 300, fallback: "kickstars/your_face_here.jpg") %></a>
                                                    <% else %>
                                                    <a class="thumb-avatar" href="#"><%= image_tag 'kickstars/your_face_here.jpg' %></a>
                                                    <%end%>
                                                    <% count+=1 %>
                                                    <% i+=1 %>
                                                <% end %>
                                                <div class="clear"></div>
                                            </div>
                                        </div>
                                    </div><!--end: .home-discover-friends -->
                                  </ul>
                                </div>
                            </div>
                        </div>
                    </div><!--end: .top-project-info -->
                    <div class="bottom-project-info clearfix">
                        <div class="project-progress sys_circle_progress" data-percent="<%= @results %>">
                            <div class="sys_holder_sector"></div>
                        </div>
                        <div class="group-fee clearfix">
                            <div class="fee-item">
                                <p class="rs lbl">Supporters</p>
                                <span class="val"><%= @campaign.supporters.count %></span>
                            </div>
                            <div class="sep"></div>
                            <div class="fee-item">
                                <p class="rs lbl">Pledged</p>
                                <span class="val">$<%= @campaign.fund_amount %></span>
                            </div>
                            <div class="sep"></div>
                            <div class="fee-item">
                                <!-- <p class="rs lbl">Days Left</p>
                                <span class="val">25</span> -->
                            </div>
                        </div>
                        <div class="clear"></div>
                    </div>
                </div>
                <div class="project-tab-detail tabbable accordion">
                    <ul class="nav nav-tabs clearfix">
                      <li class="active"><a href="#">About</a></li>
                      <li><a href="#" class="be-fc-orange">Backers (<%= @campaign.supporters.count %>)</a></li>
                      <li><a href="#" class="be-fc-orange">Comments (<%= @campaign.comments.count %>)</a></li>
                    </ul>
                    <div class="tab-content">
                        <div>
                            <h3 class="rs alternate-tab accordion-label">About</h3>
                            <div class="tab-pane active accordion-content">
                                <div class="editor-content">
                                    <h3 class="rs title-inside">Why help <%= @campaign.name %>?</h3>
                                    <!-- <p class="rs post-by">by <a href="#" class="fw-b fc-gray be-fc-orange"><%= @campaign_owner.name %></a></p> -->
                                    <p><%= @campaign.campaign_description %></p>
                                    <p>
                                        <%= image_tag attachment_url(@campaign, :image), :class=>"img-desc" %>
                                        <span class="img-label">Me and project friends on meeting</span>
                                    </p>
                                    <br />
                                    <h3 class="rs title-inside">What will this provide?</h3>
                                    <p><%= @campaign.provide_description %></p>
                                    <!-- <div class="social-sharing">

                                        <div class="addthis_toolbox addthis_default_style">
                                        <a class="addthis_button_facebook_like" fb:like:layout="button_count"></a>
                                        <a class="addthis_button_tweet"></a>
                                        <a class="addthis_button_google_plusone" g:plusone:size="medium"></a>
                                        <a class="addthis_counter addthis_pill_style"></a>
                                        </div>
                                        <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=undefined"></script>

                                    </div> -->
                                </div>
                                <!-- <div class="project-btn-action">
                                    <a class="btn big btn-red" href="#">Ask a question</a>
                                    <a class="btn big btn-black" href="#">Report this project</a>
                                </div> -->
                            </div><!--end: .tab-pane(About) -->
                        </div>
                        <div>
                            <h3 class="rs alternate-tab accordion-label">Backers (<%= @campaign.supporters.count %>)</h3>
                            <div class="tab-pane accordion-content">
                                <div class="tab-pane-inside">
                                  <% @campaign.supporters.each do |supporter| %>
                                    <div class="project-author pb20">
                                        <div class="media">
                                            <a href="#" class="thumb-left">
                                                <%= image_tag attachment_url(supporter.user, :image) %>
                                            </a>
                                            <div class="media-body">
                                                <h4 class="rs pb10"><a href="#" class="be-fc-orange fw-b"><%= supporter.user.name %></a></h4>
                                                <p class="rs"><%= supporter.user.email %></p>
                                                <p class="rs fc-gray"><%=  %></p>
                                            </div>
                                        </div>
                                    </div><!--end: .project-author -->
                                    <% end %>
                                </div>
                                <div class="project-btn-action">
                                    <a class="btn btn-red" href="#">Ask a question</a>
                                    <a class="btn btn-black" href="#">Report this project</a>
                                </div>
                            </div><!--end: .tab-pane(Backers) -->
                        </div>
                        <div>
                            <h3 class="rs active alternate-tab accordion-label">Comments (<%= @campaign.comments.count %>)</h3>
                            <div class="tab-pane accordion-content">
                                <div class="box-list-comment">
                                    <% @campaign.comments.each do |comment| %>
                                        <div class="media comment-item">
                                            <a href="#" class="thumb-left">
                                                <%= image_tag attachment_url(comment.user, :image) %>
                                                <!-- <img src="images/ex/th-90x90-1.jpg" alt="$TITLE"> -->
                                            </a>
                                            <div class="media-body">
                                                <h4 class="rs comment-author">
                                                    <a href="#" class="be-fc-orange fw-b"><%= comment.user.name %></a>
                                                    <span class="fc-gray">says:</span>
                                                </h4>
                                                <p class="rs comment-content"> <%= comment.body %></p>

                                            </div>
                                        </div><!--end: .comment-item -->
                                    <% end %>
                                </div>
                                <%= form_for [@campaign, Comment.new] do |f| %>
                                  <%= f.hidden_field :campaign_id, :value => @campaign.id %>

                                    <%= f.text_area :body, class: "txt fill-width", placeholder: "Add a comment", data: {behavior: "autocomplete"} %>

                                  <%= f.submit class: "btn btn-red" %>
                                <% end %>
                            </div><!--end: .tab-pane(Comments) -->
                        </div>
                      </div>
                </div><!--end: .project-tab-detail -->
            </div>
        </div><!--end: .content -->
        <div class="sidebar grid_4">
            <div class="project-runtime">
                <div class="box-gray">
                    <div class="project-date clearfix">

                        <span class="val"><span class="glyphicon glyphicon-calendar" style="padding-right:10px"></span><span class="fw-b">Launched: </span><%= @campaign.created_at.strftime("%b %-d, %Y") %></span>
                    </div>
                    <div class="project-date clearfix">
                        <span class="val"><span class="glyphicon glyphicon-circle-arrow-down" style="padding-right:10px"></span><span class="fw-b">Funding ends: </span>Feb 30, 2016</span>
                    </div>
                    <div class="btn btn-wyoublue btn-buck-project lbl" style="font-size:20px; color:white;">
                        <%= link_to "Donate", new_campaign_donation_path(@campaign), :style=>"color:white;" %>
                        <span class="glyphicon glyphicon-heart-empty"></span>

                    </div>
                    <!-- <span class="desc">$20 minimum pledge</span> -->
                        <!-- <span class="lbl">Donate</span>


                     <p class="rs description">This project will only be funded if at least $15,000 is pledged by Wednesday May 8, 2:05pm EDT.</p> -->
                </div>
            </div>
            <div class="project-author">
                <div class="box-gray">
                    <h3 class="title-box">Project by</h3>
                    <div class="media">
                        <a href="#" class="thumb-left">
                            <%= image_tag attachment_url(@campaign_owner, :image, :fit, 300, 300) %>
                        </a>
                        <div class="media-body">
                            <h4 class="rs pb10"><a href="#" class="be-fc-orange fw-b"><%= @campaign_owner.name %></a></h4>
                            <p class="rs"></p>
                            <p class="rs fc-gray"></p>
                        </div>
                    </div>
                    <div class="author-action">
                        <a class="btn btn-red" href="mailto:<%= @campaign_owner.email %>"><span class="glyphicon glyphicon-envelope" style="padding-right:10px"></span>Contact me</a>
                        <!-- <a class="btn btn-white" href="#">See full bio</a> -->
                    </div>
                </div>
            </div><!--end: .project-author -->
        </div><!--end: .sidebar -->
        <div class="clear"></div>

    </div>


