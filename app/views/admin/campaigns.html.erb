<div class="wrapper">
    <div class="sidebar" data-color="azure">
      <div class="sidebar-wrapper">
            <div class="logo">
                w/you
            </div>

            <ul class="nav">
                <li>
                    <%= link_to '/admin/orders' do %>
                        <!-- <i class="pe-7s-graph"></i> -->
                        <p>Orders</p>
                    <% end %>
                </li>
                <li>
                    <%= link_to '/admin/products' do %>
                        <!-- <i class="pe-7s-user"></i> -->
                        <p>Products</p>
                    <% end %>
                </li>
                <li class="active">
                    <%= link_to '/admin/campaigns' do %>
                        <p>Campaigns</p>
                    <% end %>
                </li>
            </ul>
      </div>
    </div>

    <div class="main-panel">
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <%= link_to '/assign_category_options' do %>
                                <button class="btn btn-blue">Add Product</button>
                            <% end %>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="header">
                                <h4 class="title">Campaigns</h4>
                                <p class="category"></p>
                            </div>
                            <div class="content table-responsive table-full-width">
                                <table class="table table-hover table-striped">
                                    <thead>
                                        <th>ID</th>
                                        <th>Campaign Starter Name</th>
                                        <th>Patient Name</th>
                                        <th>Funds Available</th>
                                        <th>Orders</th>
                                        <th>Product Category</th>
                                    </thead>
                                    <tbody>
                                        <% @campaigns.each do |campaign| %>
                                        <tr>
                                            <td><%= campaign.id %></td>
                                            <td><%= campaign.name %></td>
                                            <td><%= campaign.patient_name %></td>
                                            <td><%= campaign.fund_amount %></td>
                                            <td><%= campaign.orders.count %></td>
                                            <td>
                                                <% if campaign.category %>
                                                    <%= campaign.category.name %>
                                                <% else %>
                                                    <%= link_to 'Assign Category', campaign_assign_category_options_path(campaign) %>
                                                <% end %>
                                            </td>
                                        </tr>
                                        <% end %>
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
</div>

                                <div class="footer">
                                    <hr>
                                    <div class="stats">
                                        <i class="fa fa-history"></i> Updated 3 minutes ago
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <footer class="footer">
            <div class="container-fluid">
                <nav class="pull-left">
                    <ul>
                        <li>
                            <a href="#">
                                Home
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                Company
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                Portfolio
                            </a>
                        </li>
                        <li>
                            <a href="#">
                               Blog
                            </a>
                        </li>
                    </ul>
                </nav>
                <p class="copyright pull-right">
                    &copy; 2016 , made with love for a better web
                </p>
            </div>
        </footer>

    </div>
</div>
