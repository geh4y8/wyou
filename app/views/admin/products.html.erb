<div class="wrapper">
    <div class="sidebar" data-color="azure">

      <div class="sidebar-wrapper">
            <div class="logo">
                <a href="" class="simple-text">
                    w/you
                </a>
            </div>

            <ul class="nav">
                <li>
                    <%= link_to '/admin/orders' do %>
                        <!-- <i class="pe-7s-graph"></i> -->
                        <p>Orders</p>
                    <% end %>
                </li>
                <li class="active">
                    <%= link_to '/admin/products' do %>
                        <!-- <i class="pe-7s-user"></i> -->
                        <p>Products</p>
                    <% end %>
                </li>
                <li>
                    <%= link_to '/admin/campaigns' do %>
                        <p>Campaigns</p>
                    <% end %>
                </li>
            </ul>
      </div>
    </div>

    <div class="main-panel">
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <%= link_to new_product_path do %>
                                <button class="btn btn-blue">Add Product</button>
                            <% end %>
                            <%= link_to new_category_path do %>
                                <button class="btn btn-blue">Add Category</button>
                            <% end %>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="header">
                                <h4 class="title">Products</h4>
                                <p class="category"></p>
                            </div>
                            <div class="content">
                                <table class="table table-hover table-striped">
                                    <thead>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Retail Price</th>
                                    </thead>
                                    <tbody>
                                        <% @products.each do |product| %>
                                            <tr>
                                                <td><%= product.id %></td>
                                                <td><%= link_to product.name, product_path(product) %></td>
                                                <td><%= product.retail_price %></td>
                                            </tr>
                                        <% end %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card ">
                            <div class="header">
                                <h4 class="title">Categories</h4>
                                <p class="category"></p>
                            </div>
                            <div class="content">
                                <table class="table table-hover table-striped">
                                    <thead>
                                        <th>ID</th>
                                        <th>Name</th>
                                    </thead>
                                    <tbody>
                                        <% @categories.each do |category| %>
                                            <tr>
                                                <td><%= category.id %></td>
                                                <td><%= link_to category.name, category_path(category) %></td>
                                            </tr>
                                        <% end %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                                <div class="footer">
                                    <hr>
                                    <div class="stats">
                                        <i class="fa fa-history"></i> Updated 3 minutes ago
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


