<% if current_user.has_role? :admin %>
    <div class="wrapper">
        <div class="sidebar" data-color="azure">
          <div class="sidebar-wrapper">
                <div class="logo">
                    <a href="" class="simple-text">
                        w/you
                    </a>
                </div>

                <ul class="nav">
                    <li class="active">
                        <%= link_to '/admin/orders' do %>
                            <!-- <i class="pe-7s-graph"></i> -->
                            <p>Orders</p>
                        <% end %>
                    </li>
                    <li>
                        <%= link_to '/admin/products' do %>
                            <!-- <i class="pe-7s-user"></i> -->
                            <p>Products</p>
                        <% end %>
                    </li>
                    <li>
                        <%= link_to '/admin/campaigns' do %>
                            <p>Campaigns</p>
                        <% end %>
                    </li>
                </ul>
          </div>
        </div>
        <div class="main-panel">
            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="header">
                                    <h4 class="title">Latest Orders</h4>
                                    <p class="category"></p>
                                </div>
                                <div class="content table-responsive table-full-width">
                                    <table class="table table-hover table-striped">
                                        <thead>
                                            <th>ID</th>
                                            <th>Name</th>
                                            <th>Items</th>
                                            <th>First Order</th>
                                            <th>Shipped</th>
                                            <th>Shipping Confirmation</th>
                                        </thead>
                                        <tbody>
                                            <% @orders.each do |order| %>
                                            <% order.shipped ? class_name = 'success' : class_name = 'warning' %>
                                            <tr class=<%= class_name %>>
                                                <td><%= order.id %></td>
                                                <td><%= link_to "#{order.campaign.patient_name}", campaign_order_path(order.campaign, order) %></td>
                                                <td><%= order.products.count %></td>
                                                <td><%= order.campaign.orders.count > 1 ? '' : 'yes' %></td>
                                                <td><%= order.shipped ? 'yes' : (link_to 'Set as shipped', campaign_order_add_shipping_confirmation_path(order.campaign, order)) %></td>
                                                <td><%= order.shipping_confirmation %></td>
                                            </tr>
                                            <% end %>
                                        </tbody>
                                    </table>

                                </div>
                            </div>
                        </div>
                    </div>
                                    <div class="footer">
                                        <hr>
                                        <div class="stats">
                                            <i class="fa fa-history"></i> Updated 3 minutes ago
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


