<%= form_for current_user, :html => {:class=> 'form-horizontal'} do |f| %>

  <div class="form-group">
    <%= f.label :image, 'User Avatar', :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.attachment_field :image, :class =>"form-control" %>
    </div>
  </div>
  <%= f.submit 'submit', :class=>'btn btn-primary form-control' %>
<% end %>
