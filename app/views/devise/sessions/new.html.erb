<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <%= devise_error_messages! %>
      <!--      Wizard container        -->
      <div class="wizard-container">
        <div class="card wizard-card ct-wizard-blue" id="wizardNewUser">
          <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form', :class => 'form-horizontal'}) do |f| %>
            <div class="wizard-header">
              <h3>
                 Sign In <br>
                 <small></small>
              </h3>
            </div>

            <ul>
              <li><a href="#sign_in_form" data-toggle="tab">Sign In</a></li>
            </ul>
            <div class="tab-content">
              <div class="tab-pane" id="sign_in_form">
                <div class="row">
                  <h4 class="info-text"></h4>
                  <div class="col-sm-3">
                  </div>
                  <div class="col-sm-7">
                    <div class="form-group">
                      <label>Email <small></small></label>
                      <%= f.email_field :email, :autofocus => true, class: 'form-control' , :placeholder => 'Email', required: true %>
                    </div>
                    <div class="form-group">
                      <label>Password<small></small></label>
                      <%= f.password_field :password, class: 'form-control', :placeholder => 'Password', required: true %>
                    </div>
                    <div class="col-md-4 col-md-offset-8">
                      <%- if devise_mapping.recoverable? %>
                        <%= link_to "Forgot password?", new_password_path(resource_name), class: 'right' %>
                      <% end -%>
                    </div>
                    <% if devise_mapping.rememberable? -%>
                      <div class="checkbox" style="width:150px">
                        <label>
                          <%= f.check_box :remember_me %> Remember me
                        </label>
                      </div>
                    <% end -%>
                </div>
                  </div>
              </div>
            </div>
            <div class="wizard-footer">
              <div class="pull-right">
                <input type='button' class='btn btn-next btn-fill btn-warning btn-wd btn-sm' name='next' value='Next' />
                <%= hidden_field_tag :redirect_to, params[:redirect_to] %>
                <%= f.submit 'Sign in', :class => 'btn btn-finish btn-fill btn-warning btn-wd btn-sm', name: 'finish' %>
              </div>
              <div class="pull-left">
                <input type='button' class='btn btn-previous btn-fill btn-default btn-wd btn-sm' name='previous' value='Previous' />
              </div>
              <div class="clearfix"></div>
            </div>
          <% end %>
        </div>
      </div> <!-- wizard container -->
      <br>
      <br>
    </div>
  </div>
</div>
